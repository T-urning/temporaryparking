/* pages/user/user.wxss */
page{
  height: 100%;
}
.userinfobackground{
  top: 0%;
  height: 450rpx;
  width: 100%;
  background-color:	rgb(192, 192, 11);
  display: flex;
  justify-content: center;
  align-items: center;
}
.userinfo{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-phone{
  font-size: 12pt;
  color: #888888;

}

.usermanagement{
  width: 100%;
}
.useroperation{
  
  display: flex;
  flex-direction: row;
  /* align-items: center; */
  margin: 60rpx 20rpx 60rpx 20rpx;
  
}

.operationicon{
  margin-top: 8rpx; 
  margin-right: 20rpx; 
  width: 60rpx;
  height: 60rpx;
  
}
.operationitem{
  
  width: 700rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom-style: solid; 
  border-bottom-color: #888888;
  border-bottom-width: 1rpx;
  padding-bottom: 20rpx;
}
.arrowicon{
  width: 40rpx;
  height: 40rpx;
}
.text{
  font-size: 16pt;
  
}